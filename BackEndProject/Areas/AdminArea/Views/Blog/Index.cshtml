@model List<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminArea/Views/Shared/_Layout.cshtml";
}
@using BackEndProject.Models
<div class="container">
    <div class="row">
        <div class="col-lg-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">
                        Notice
                        Table
                    </h4>
                    <a asp-action="Create" class="btn btn-success">
                        Create Notice
                    </a>
                    
                    <p class="card-description">
                        Add class <code>.table-hover</code>
                    </p>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Settings</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td><img src="~/img/blog/@item.ImageUrl" alt="blog"/></td>
                                        <td>@item.Name</td>
                                        <td>@item.Description</td>



                                        <td>
                                            <a asp-action="detail" asp-route-id="@item.Id" class="btn btn-outline-primary ">
                                                <i class="mdi mdi-account-card-details"></i>
                                            </a>
                                            <a asp-action="edit" asp-route-id="@item.Id" class="btn btn-outline-warning ">
                                                <i class="mdi mdi-tooltip-edit"></i>
                                            </a>
                                            <a asp-action="delete" asp-route-id="@item.Id" class="btn btn-outline-danger ">
                                                <i class="mdi mdi-delete"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



