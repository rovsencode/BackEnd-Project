@model Blog
@{
    ViewData["Title"] = "Detail";
}


<div class="card" style="width: 18rem;">

    <img src="~/img/blog/@Model.ImageUrl" width="100" height="100" />

    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">AuthorName: @Model.AuthorName</li>
        <li class="list-group-item">Description Name: @Model.Description</li>
        <li class="list-group-item">Created Time: @Model.DateTime</li>

    </ul>
</div>





