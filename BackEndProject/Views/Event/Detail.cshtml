@model EventDetailVM
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}	<div class="banner-area-wrapper">
            <div class="banner-area text-center">	
                <div class="container">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="banner-content-wrapper">
                                <div class="banner-content">
                                    <h2>event / details</h2> 
                                </div> 
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>    

<div class="event-details-area blog-area pt-150 pb-140">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="event-details">
                    <div class="event-details-img">
                        <img src="~/img/event/@Model.even.ImageUrl" alt="event-details">
                        <div class="event-date">
                            <h3>@Model.even.Date.ToString("dd ") <span>@Model.even.Date.ToString("MMMM")</span></h3>
                        </div>
                    </div>
                    <div class="event-details-content">
                        <h2>@Model.even.Name</h2>
                        <ul>
                            <li><span>time : </span>@Model.even.Date.ToString("hh:mm tt") - @Model.even.Deadline.ToString("hh:mm tt")</li>
                            <li><span>venue : </span>@Model.even.Venue</li>
                        </ul>
                        <p>@Model.even.Description</p>
                        <div class="speakers-area fix">
                            <h4>speakers</h4>
                            @foreach (var speaker in Model.even.Speakers)
                            {
                                <div class="single-speaker">
                                    <div class="speaker-img">
                                        <img src="~/img/event/@speaker.ImageUrl" alt="speaker">
                                    </div>
                                    <div class="speaker-name">
                                        <h5>@speaker.FullName</h5>
                                        <p>@speaker.Position, @speaker.Companie.Name</p>
                                    </div>
                                </div>
                            }
                 
                        </div>
                    </div>
                    <div class="reply-area">
                        <h3>LEAVE A REPLY</h3>
                        <p>I must explain to you how all this a mistaken idea of ncing great explorer of the rut<br> the is lder of human happinescias unde omnis iste natus error sit volptatem </p>
                        <form id="contact-form" action="http://demo.devitems.com/eduhome/mail.php" method="post">
                            <div class="row">
                                <div class="col-md-12">
                                    <p>Name</p>
                                    <input type="text" name="name" id="name">
                                </div>
                                <div class="col-md-12">
                                    <p>Email</p>
                                    <input type="text" name="email" id="email">
                                </div>
                                <div class="col-md-12">
                                    <p>Subject</p>
                                    <input type="text" name="subject" id="subject">
                                    <p>Massage</p>
                                    <textarea name="message" id="message" cols="15" rows="10"></textarea>
                                </div>
                            </div>
                            <a class="reply-btn" href="#" data-text="send"><span>send message</span></a>
                            <p class="form-messege"></p>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="blog-sidebar right">
                    <div class="single-blog-widget mb-50">
                        <h3>search</h3>
                        <div class="blog-search">
                            <form id="search" action="#">
                                <input type="search" placeholder="Search..." name="search" />
                                <button type="submit">
                                    <span><i class="fa fa-search"></i></span>
                                </button>
                            </form>
                        </div>
                    </div>
            @await Html.PartialAsync("_CategoriesPartial",Model.Categories)
                    <div class="single-blog-widget mb-50">
                        <div class="single-blog-banner">
                            <a href="blog-details.html" id="blog"><img src="~/img/blog/blog-img.jpg" alt="blog"></a>
                            <h2>best<br> eductaion<br> theme</h2>
                        </div>
                    </div>
                  @await Html.PartialAsync("_BlogsPartial",Model.Blogs)
                    <div class="single-blog-widget">
                        <h3>tags</h3>
                        <div class="single-tag">
                 @foreach (var item in Model.even.EventTags)
                            {
                                <a href="blog-details.html" class="mr-10 mb-10">@item.Tag.Name</a>
                            }
           
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

